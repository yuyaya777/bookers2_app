<main>
  <p id="notice"></p>
  <div class="container px-t px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% form_with model:@user, local:true do |f| %>
        <%= f.text_field :name %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr></tr>
          </tbody>
        </table>
        <% end %>
        <h2 class="mt-3">New Book</h2>
        <% form_with model:@book, local:true do |book| %>
        <h4>Title</h4>
        <%= book.text_field :title %>
        <h4>Opinion</h4>
        <%= book.text_area :body %>
        <%= book.submit "Create Book", class:"btn btn-success" %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% @book.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>