<main>
  <p id="notice"></p>
  <div class="container px-t px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg' %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <%= link_to "", edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
        <h2 class="mt-3">New Book</h2>
        <%= form_with model:@book, local:true do |book| %>
        <h4>Title</h4>
        <%= book.text_field :title %>
        <h4>Opinion</h4>
        <%= book.text_area :body %>
        <%= book.submit "Create Book", class:"btn btn-success" %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <tr>
              <td><%= link_to user_path(@showbook.user.id) do %>
                    <%= attachment_image_tag @showbook.user, :profile_image %><%= @showbook.user.name %>
                  <% end %>
              </td>
              <td><%= link_to @showbook.title, book_path %></td>
              <td><%= @showbook.body %></td>
              <td><%= link_to 'Edit', edit_book_path(@showbook.id), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to 'Delete', book_path(@showbook.id), method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-sm btn-danger" %></td>
            </tr>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>